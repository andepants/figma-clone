# Firebase Configuration
# Get these values from Firebase Console > Project Settings > Your apps > SDK setup and configuration

VITE_FIREBASE_API_KEY="your_api_key_here"
VITE_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
VITE_FIREBASE_PROJECT_ID="your-project-id"
VITE_FIREBASE_DATABASE_URL="https://your-project-default-rtdb.firebaseio.com"
VITE_FIREBASE_STORAGE_BUCKET="your-project.firebasestorage.app"
VITE_FIREBASE_MESSAGING_SENDER_ID="your_sender_id"
VITE_FIREBASE_APP_ID="your_app_id"

# Stripe Configuration
# Get these from Stripe Dashboard > Developers > API keys
# Use TEST MODE keys for development

VITE_STRIPE_PUBLISHABLE_KEY="pk_test_your_publishable_key_here"

# Stripe Price IDs (from Stripe Dashboard > Products)
# Founders: $10/year (first 10 users)
VITE_STRIPE_FOUNDERS_PRICE_ID="price_your_founders_price_id_here"

# Regular: $60/year (after 10 users)
# Test mode: price_1SJI8SK9ZHlDy73WyRYHyGIt
# Production: price_1SJI92Gag53vyQGAm9YexOeY
VITE_STRIPE_FOUNDERS_PRICE_ID60="price_1SJI8SK9ZHlDy73WyRYHyGIt"

# Stripe Customer Portal (from Stripe Dashboard > Settings > Customer Portal)
# This URL allows customers to manage subscriptions, update payment methods, and cancel
VITE_STRIPE_PORTAL_URL="https://billing.stripe.com/p/login/test_your_portal_url_here"

# Backend Stripe Configuration (for Firebase Functions)
# Add these to functions/.env.local (NOT this file)
# Get from: https://dashboard.stripe.com/test/apikeys
# STRIPE_SECRET_KEY="sk_test_your_secret_key_here"
# STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"
